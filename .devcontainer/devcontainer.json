// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
{
  "name": "Kubernetes - k3d",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb",
    "storage": "32gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "extensions": "connectedk8s,k8s-extension"
    },
    "ghcr.io/rio/features/k3d:1": {}
  },
  "secrets": {
    "TENANT_ID": {
      "description": "Your Azure Tenant/Parent Mgmt Group ID"
    },
    "SUBSCRIPTION_ID": {
      "description": "Your Azure subscription ID"
    },
    "RESOURCE_GROUP": {
      "description": "Your Azure resource group"
    },
    "LOCATION": {
      "description": "Region to use, must be one of eastus, eastus2, eastus2euap"
    }
  },
  "containerEnv": {
    // This env var is important to allow k3s to support shared mounts, required for CSI driver
    // Temporary fix until made default https://github.com/k3d-io/k3d/pull/1268#issuecomment-1745466499
    "K3D_FIX_MOUNTS": "1"
  },
  "onCreateCommand": "bash .devcontainer/onCreateCommand.sh",
  "postStartCommand": "bash .devcontainer/postStartCommand.sh",
  "postCreateCommand": "bash -lc 'mkdir -p /home/codespace/.config/vscode-dev-containers && chown -R \"$(id -u ${REMOTE_USER:-vscode})\":\"$(id -g ${REMOTE_USER:-vscode})\" /home/codespace || true; if command -v az >/dev/null 2>&1; then az upgrade --yes || true; fi; if [ -x /opt/az/bin/python3 ]; then /opt/az/bin/python3 -m pip uninstall -y --user azure azure-core azure-mgmt-core azure-mgmt-resource azure-mgmt-* 2>/dev/null || true; fi; if command -v az >/dev/null 2>&1; then az extension add --upgrade connectedk8s 2>/dev/null || az extension update --name connectedk8s 2>/dev/null || true; fi; bash .devcontainer/patch_connectedk8s.sh'"
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
